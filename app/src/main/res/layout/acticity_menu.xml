<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/Buttons_Button"
        android:backgroundTint="@color/neon_light_blue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="@string/moovment_buttons_LBL" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/Tilt_Button"
        android:backgroundTint="@color/neon_light_blue"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Buttons_Button"
        android:layout_marginTop="20dp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="@string/moovment_tilt" />
</RelativeLayout>